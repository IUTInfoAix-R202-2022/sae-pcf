<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<fx:root prefHeight="700.0" prefWidth="1200.0" type="javafx.scene.layout.Pane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <HBox prefHeight="700.0" prefWidth="1200.0">
       <children>
          <BorderPane HBox.hgrow="ALWAYS">
            <center>
               <Button fx:id="dataAccessButton" mnemonicParsing="false" onAction="#accessToData" text="Accès aux données" BorderPane.alignment="CENTER" />
            </center>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </BorderPane>
          <BorderPane>
             <center>
                <Line endY="50.0" startY="250.0" BorderPane.alignment="CENTER" />
             </center>
            <HBox.margin>
               <Insets left="10.0" right="10.0" />
            </HBox.margin>
          </BorderPane>
          <BorderPane HBox.hgrow="ALWAYS">
             <center>
                <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                   <children>
                      <Label alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" text="Connexion en tant qu'administrateur" />
                      <TextField fx:id="userNameField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" promptText="Nom d'utilisateur">
                         <opaqueInsets>
                            <Insets />
                         </opaqueInsets>
                         <font>
                            <Font name="JetBrains Mono Regular" size="13.0" />
                         </font>
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                      </TextField>
                      <PasswordField fx:id="passwordField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" promptText="Mot de passe" VBox.vgrow="ALWAYS">
                         <font>
                            <Font name="JetBrains Mono Regular" size="13.0" />
                         </font>
                      </PasswordField>
                      <Label fx:id="errorMessage" text="Couple nom d'uttilisateur, mot de passe invalide" styleClass="error" visible="false" />
                     <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submit" text="Soumettre">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Button>
                   </children>
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <BorderPane.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </BorderPane.margin>
                </VBox>
             </center>
          </BorderPane>
       </children>
   </HBox>
</fx:root>
