<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<fx:root type="javafx.scene.layout.Pane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <HBox>
       <children>
          <BorderPane>
            <center>
               <Button id="dataAccessButton" mnemonicParsing="false" onAction="#accessToData" text="Accès aux données" BorderPane.alignment="CENTER" />
            </center>
         </BorderPane>
          <BorderPane>
             <center>
                <Line endY="50.0" startY="250.0" BorderPane.alignment="CENTER" />
             </center>
          </BorderPane>
          <BorderPane>
             <center>
                <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                   <children>
                      <TextField id="userNameField" alignment="CENTER" promptText="Nom d'utilisateur">
                         <opaqueInsets>
                            <Insets />
                         </opaqueInsets>
                         <font>
                            <Font name="JetBrains Mono Regular" size="13.0" />
                         </font>
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                      </TextField>
                      <PasswordField id="passwordField" alignment="CENTER" promptText="Mot de passe">
                         <font>
                            <Font name="JetBrains Mono Regular" size="13.0" />
                         </font>
                      </PasswordField>
                      <Label id="errorMessage" text="Couple nom d'uttilisateur, mot de passe invalide" visible="false" />
                     <Button id="submitButton" mnemonicParsing="false" onAction="#submit" text="Soumettre">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Button>
                   </children>
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                </VBox>
             </center>
             <top>
                <Label alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" text="Conexion en tant qu'administrateur" BorderPane.alignment="CENTER" />
             </top>
          </BorderPane>
       </children>
   </HBox>
</fx:root>
